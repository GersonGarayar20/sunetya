---
import { services } from "../data/services";
import Section from "./ui/Section.astro";
---

<Section
  id="services"
  title="Servicios"
  subtitle="Impulsa tu Negocio con Nuestros Servicios Especializados"
>
  <div class="grid grid-cols-3 gap-6">
    {
      services.map(({ title, description }) => (
        <article class="flex flex-col gap-6 p-6 border border-slate-800 rounded-3xl">
          <h3 class="text-slate-300 text-2xl font-bold">{title}</h3>
          <p class="text-slate-400 text-balance">{description}</p>
        </article>
      ))
    }
  </div>
</Section>
