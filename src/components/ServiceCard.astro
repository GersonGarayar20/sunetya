---
interface Props {
  title: string;
  description: string;
  link: string;
}
const { title, description, link } = Astro.props;
---

<article class="flex flex-col gap-6 p-6 rounded-3xl">
  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    class="size-6 text-violet-400"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M3 8.25V18a2.25 2.25 0 0 0 2.25 2.25h13.5A2.25 2.25 0 0 0 21 18V8.25m-18 0V6a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 6v2.25m-18 0h18M5.25 6h.008v.008H5.25V6ZM7.5 6h.008v.008H7.5V6Zm2.25 0h.008v.008H9.75V6Z"
    ></path>
  </svg>

  <h3 class="text-slate-300 text-2xl font-bold">{title}</h3>
  <p class="text-slate-400 text-balance">{description}</p>
  <a class="text-slate-200 flex gap-2" href={link}>
    Leer m√°s
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="size-6"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3"></path>
    </svg>
  </a>
</article>

<style>
  article {
    @apply bg-slate-900/10 backdrop-blur-3xl border border-slate-900 border-t-slate-800;
  }
</style>
