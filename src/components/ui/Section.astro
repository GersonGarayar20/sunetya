---
interface Props {
  id: string;
  title: string;
  subtitle?: string;
}

const { title, subtitle, id } = Astro.props;
---

<section id={id} class="md:py-24 py-12 flex flex-col md:gap-12 gap-6 relative">
  <header class="flex flex-col gap-6 md:py-12 py-6">
    <h2 class="text-slate-300 md:text-4xl text-3xl text-center font-semibold">
      {title}
    </h2>
    {
      subtitle && (
        <p class="text-slate-400 md:text-xl text-center">{subtitle}</p>
      )
    }
  </header>
  <slot />
</section>
