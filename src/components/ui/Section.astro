---
interface Props {
  id: string;
  title: string;
  subtitle?: string;
}

const { title, subtitle, id } = Astro.props;
---

<section id={id} class="py-24 flex flex-col gap-12">
  <header class="flex flex-col gap-6 py-12">
    <h2 class="text-slate-300 text-4xl text-center">{title}</h2>
    {subtitle && <p class="text-slate-400 text-xl text-center">{subtitle}</p>}
  </header>
  <slot />
</section>
