---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import Banner from "../components/Banner.astro";

const data = {
  title: "Optimización SEO",
  description:
    "En Sunetya, ofrecemos servicios completos de optimización para motores de búsqueda (SEO) diseñados para aumentar la visibilidad de tu sitio web en los resultados de búsqueda. Nuestro enfoque incluye tanto técnicas on-page como off-page, asegurando que tu sitio web cumpla con los requisitos técnicos y de contenido necesarios para mejorar su ranking en los motores de búsqueda.",
  features: [
    {
      title: "SEO On-Page",
      description:
        "Optimización técnica dentro de tu sitio web para mejorar su visibilidad en los motores de búsqueda, incluyendo la configuración de metaetiquetas, la optimización del contenido y la estructura de URL.",
      image:
        "https://cdn.dribbble.com/userupload/15637281/file/original-36b65e650fb89b70a0eb67f53a9f7a89.png?resize=1200x900",
    },
    {
      title: "SEO Técnico",
      description:
        "Implementación de técnicas avanzadas para mejorar la velocidad de carga, la adaptabilidad móvil y la accesibilidad del sitio web, aspectos cruciales para el ranking en los motores de búsqueda.",
      image:
        "https://cdn.dribbble.com/userupload/15644027/file/original-8bbb7352eeabee6b7496accaab32d98d.png?resize=1200x900",
    },
    {
      title: "Construcción de Enlaces (Link Building)",
      description:
        "Estrategias diseñadas para obtener enlaces de calidad que fortalezcan la autoridad de tu sitio web y mejoren su posicionamiento en los resultados de búsqueda orgánica.",
      image:
        "https://cdn.dribbble.com/userupload/15624599/file/original-1e3871851377fb56e7ac3436618dbaba.jpg?resize=1200x900",
    },
  ],
};
---

<Layout title="Sunetya - Diseño web personalizado">
  <Navbar />
  <main class="max-w-7xl mx-auto px-6">
    <section class="h-svh flex flex-col justify-center gap-12">
      <h1 class="text-slate-200 inline-block text-7xl font-bold">
        {data.title}
      </h1>
      <p class="text-slate-400 text-4xl">{data.description}</p>
    </section>
    <section class="">
      <div class="flex flex-col gap-12">
        {
          data.features.map(({ title, description, image }) => (
            <article class="flex even:flex-row-reverse gap-12 py-24">
              <div class="w-1/2 flex flex-col justify-center gap-12">
                <h3 class="text-slate-300 text-5xl">{title}</h3>
                <p class="text-slate-400 text-2xl text-balance">
                  {description}
                </p>
              </div>
              <div class="w-1/2">
                <img class="rounded-3xl" src={image} alt="" />
              </div>
            </article>
          ))
        }
      </div>
    </section>
    <Banner />
    <Footer />
  </main>
</Layout>
